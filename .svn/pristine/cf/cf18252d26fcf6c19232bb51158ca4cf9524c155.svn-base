<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>

<!DOCTYPE html>
<html>
<head>
	<title>修改职位</title>
	<link rel="stylesheet" href="<%=request.getContextPath()%>/css/main.css" />
	<link rel="stylesheet" href="<%=request.getContextPath()%>/plugins/layui/css/layui.css" />
	<script type="text/javascript" src="<%=request.getContextPath()%>/plugins/layui/layui.js"></script>
</head>

<body>
	<div class="layui-form-item" style="margin-top:20px;margin-right:20px;">
		
		<div class="layui-inline">
			<label class="layui-form-label">所属部门：</label>
			<select class="select">
				<option>请选择省</option>
				<option>开发部</option>
				<option>市场部</option>
				<option>福建省</option>
			</select>
			<span class="msg">&nbsp;*&nbsp;</span>
		</div>
		<div class="layui-inline">
			<label class="layui-form-label">所属职位：</label>
			<select class="select">
				<option>请选择省</option>
				<option>开发部</option>
				<option>市场部</option>
				<option>福建省</option>
			</select>
			<span class="msg">&nbsp;*&nbsp;</span>
		</div>
		<div class="layui-inline">
			<label class="layui-form-label">招聘类型：</label>
			<select class="select">
				<option>请选择省</option>
				<option>开发部</option>
				<option>市场部</option>
				<option>福建省</option>
			</select>
			<span class="msg">&nbsp;*&nbsp;</span>
		</div><br/><br/>
		
		<div class="layui-inline">
			<label class="layui-form-label">招聘人数：</label>
			<div class="layui-input-inline">
				<input type="text" class="layui-input">
			</div>
			<span class="msg">&nbsp;*&nbsp;</span>
		</div>
		<div class="layui-inline">
			<label class="layui-form-label">学历要求：</label>
			<select class="select">
				<option>请选择省</option>
				<option>开发部</option>
				<option>市场部</option>
				<option>福建省</option>
			</select>
			<span class="msg">&nbsp;*&nbsp;</span>
		</div>
		<div class="layui-inline">
			<label class="layui-form-label">工作年限：</label>
			<div class="layui-input-inline">
				<input type="text" class="layui-input">
			</div>
			<span class="msg">&nbsp;*&nbsp;</span>
		</div><br/><br/>
		
		<div class="layui-form-item layui-form-text">
			<label class="layui-form-label">职位描述：</label>
			<div class="layui-input-block">
				<textarea placeholder="请输入内容" class="layui-textarea"></textarea>
			</div>
		</div>
		
		<div class="layui-form-item layui-form-text">
			<label class="layui-form-label">招聘要求：</label>
			<div class="layui-input-block">
				<textarea placeholder="请输入内容" class="layui-textarea"></textarea>
			</div>
		</div>
		
		<div class="layui-form-item layui-form-text">
			<label class="layui-form-label">截止时间：</label>
			<div class="layui-input-inline">
				<input type="text" class="layui-input">
			</div>
			<span class="msg">&nbsp;*&nbsp;</span>
		</div>
		
		<input type="submit" value="修&nbsp;&nbsp;改" class="layui-btn layui-btn-radius" style="margin-top:20px;margin-left:100px;" />
		<a href="<%=request.getContextPath()%>/jsp/recruit/releases/releasesList.jsp" class="layui-btn layui-btn-radius" style="margin-top:20px">返&nbsp;&nbsp;回</a>
		
	</div>
</body>
</html>
